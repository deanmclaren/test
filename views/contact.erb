<h1>Contact Us</h1>

<form action="/contact" method="post">
  <label for="first_name">First Name</label>
  <input type="text" id="first_name" name="first_name" placeholder="e.g. John" class="special-input">
  <br>
  <label for="last_name">Last Name</label>
  <input type="text" id="last_name" name="last_name" placeholder="e.g. Smith" class="special-input">
  <br>
  <label for="email">Email</label>
  <input type="email" id="email" name="email" placeholder="e.g. john@smith.com">
  <br>
  <input type="checkbox" name="urgent" id="urgent">
  <label for="urgent" class="selector">Urgent?</label>
  <br>
  <input type="radio" name="department" id="sales" value="sales">
  <label for="sales" class="selector">Sales</label>
  <input type="radio" name="department" id="technical" value="technical">
  <label for="technical" class="selector">Technical</label>
  <input type="radio" name="department" id="marketing" value="marketing">
  <label for="marketing" class="selector">Marketing</label>
  <br>
  <label for="category">Category</label>
  <select name="category" id="category">
    <option value="art">Art</option>
    <option value="science">Science</option>
    <option value="sports">Sports</option>
  </select>
  <br>
  <label for="message">Message</label>
  <textarea id="message" name="message"></textarea>
  <br>
  <input type="submit" value="Contact Us!!">
</form>
